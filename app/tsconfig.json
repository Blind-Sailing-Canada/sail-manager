{
  "compileOnSave": false,
  "exclude": [
    "./app/**",
    "./node_modules/**",
    "../api/node_modules/**"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./app/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node"],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [".eslintrc.js", "./src/**/*.ts", "./cspell.config.js"],
  "exclude": ["node_modules", "dist"]
}
